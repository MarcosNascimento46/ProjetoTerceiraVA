<h1>Lista de Vagas</h1>

<%= link_to 'Nova Vaga', new_vaga_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>Empresa</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @vagas.each do |vaga| %>
      <tr>
        <td><%= vaga.titulo %></td>
        <td><%= vaga.descricao %></td>
        <td><%= vaga.empresa %></td>
        <td>
          <%= link_to 'Ver', vaga_path(vaga) %> |
          <%= link_to 'Editar', edit_vaga_path(vaga) %> |
          <%= link_to 'Excluir', vaga_path(vaga), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
